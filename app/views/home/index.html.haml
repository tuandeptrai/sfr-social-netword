.row
  .col-lg-12
    %h1.page-header Post Article
.row
  .col-lg-8
    .col-lg-6
      = render 'shared/notification'
      %form{action: articles_path, method: :post, remote: true}
        = hidden_field_tag :authenticity_token,form_authenticity_token
        .form-group
          %label Title
          %input.form-control{placeholder: "Enter text", name: "title"}
        .form-group
          %label Content
          %textarea.form-control{rows: "3", name: "content"}
        %button.btn.btn-success{type: "submit"} submit