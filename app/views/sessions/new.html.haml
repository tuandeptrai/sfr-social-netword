%html
  %head
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              %h3.panel-title Sign in
            .panel-body
              - @user||= User.new
              = render 'shared/notification'
              = form_for @user, url:create_session_path , method: :post do |f|
                %fieldset
                  .form-group
                    .textbox-wrap.focused
                      .input-group
                        %span.input-group-addon
                          %i.icon-user.icon-color
                        = f.text_field :email, class: "form-control", placeholder: "E-mail"
                  .form-group
                    .textbox-wrap.focused
                      .input-group
                        %span.input-group-addon
                          %i.icon-user.icon-color
                        = f.password_field :password, class: "form-control", placeholder: "Password"
                  .checkbox
                    %label
                      %input{name: "remember", type: "checkbox", value: "Remember Me"}>/
                      Remember Me

                  %button.btn.btn-lg.btn-success.btn-block{type: "submit"} Sign in